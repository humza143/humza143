#include<stdio.h>
void main()
{
    int week; 
    printf("enter week number1to7:");
    scanf("%d",& week);
    
    switch(week)
    {
        case 1:
        printf("monday");
        break;
        case 2:
        printf("tuesday");
        break;
        case 3: 
        printf("wednesday");
        break;
        case 4:
        printf("thursday");
        break;
        case 5:
        printf("firday");
        break;
        case 6:
        printf("saturday");
        break;
        case 7:
        printf("sunday");
        break;
        default:
        printf("invalid input!please enter week number between 1 to 7.");
        
        
    }
}
